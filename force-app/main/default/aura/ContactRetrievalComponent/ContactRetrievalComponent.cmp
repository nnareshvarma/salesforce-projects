<aura:component   controller="ContactListController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="contactList" type="Contact[]"   />
    <aura:handler name="init" value="{!this}" action="{!c.getContacts}"/>
    <div>
        <c:QuickContactComp accountId="{!v.recordId}" />
    </div>
        <div class="slds-p-around_x-small">
    <div class="slds-grid slds-wrap">
<aura:iteration items="{!v.contactList}" var="con">
        <div class="slds-col slds-size_1-of-3  slds-p-around_x-small ">
        
        <lightning:card footer="{!con.Email}" title="{!con.Name}" iconName="standard:contact">
        <aura:set attribute="actions">
            <lightning:button name="{!con.Id}"   label="View Details" variant="brand"  onclick="{!c.viewContactDetails}"/>
        </aura:set>
        <p class="slds-p-horizontal_small">
           {!con.Name}     {!con.Phone}
        </p>
    </lightning:card>
       </div> 
    </aura:iteration>
     </div>
    
    
</div>

    
    
    
</aura:component>